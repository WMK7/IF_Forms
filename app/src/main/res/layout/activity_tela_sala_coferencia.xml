<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".TelaSalaCoferencia">

    <ImageView
        android:id="@+id/imageViewVoltarSala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/voltar"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/AzulBotao"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Entre em sua truma:" />

    <TextView
        android:id="@+id/txt1A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/AzulBotao"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="1ºA        Secretariado" />

    <TextView
        android:id="@+id/txt1B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/AzulBotao"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="1ºB        Secretariado" />

    <TextView
        android:id="@+id/txt2A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/AzulBotao"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="2ºA        Secretariado" />

    <TextView
        android:id="@+id/txt2B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/AzulBotao"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="2ºB        Secretariado" /> />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/AzulBotao"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="3º           Secretariado" />

</LinearLayout>